# CLASSES AND OBJECTS USING USER INPUT

class hello{

    String name = "";
    String proce = "";
    int ram = 0;
    int price = 0;
    public static void main(String args[])
    {
        hello lap1 = new hello();
        lap1.name = "HP";
        lap1.proce = "reyzen 5";
        lap1.ram = 8;
        lap1.price = 70000;

        hello lap2 = new hello();
        lap2.name = "ASUS";
        lap2.proce = "i5";
        lap2.ram = 8;
        lap2.price = 70000;
        System.out.println(lap1.proce);
        System.out.println(lap2.price);

    }
}
