# SIMPLE PROGRAM USING CLASS AND OBJECTS

class hello{

    int tea = 10;
    int coffee = 15;
    public static void main(String args[])
    {
        hello server1 = new hello();
        System.out.println(server1.tea);

        hello server2 = new hello();
        System.out.println(server2.coffee);

    }
}
